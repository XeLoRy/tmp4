{
  "platform": {
    "apiRuntime": "node:20"
  },
  "mimeTypes": {
    ".yml": "text/yaml",
    ".yaml": "text/yaml"
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/images/*", "/admin/*", "/_next/*", "*.{css,js,json,yml,yaml,png,jpg,jpeg,gif,svg,ico,webp,html,txt}"]
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    }
  ]
}
